/* Array */

let valores = [7, 5 , 6 , 7]

/*Acessar os indices de um array*/
console.log(valores[0], valores[3])
console.log(valores)

/*Adiionar um novo elemento ao array usando o indicie*/
valores[4] = 10
console.log(valores.length)

/*Push é uma função do array utilizada para adicionar um conjunto de 
itens ao array*/
valores.push({id:3} ,false,null,'teste')
console.log(valores)

/*Arrays aceitam diversos tipos de dados simultaneamente, porém, se
deve prezar por arrrays homgeeneos, do mesmo tipo*/

/*o Pop remove o ultimo elemento do array por vez*/
valores.pop()
console.log(valores)

/*o Delete remove elementos do array pelo indice escolhido*/
delete valores[0]
console.log(typeof valores)
console.log(valores)

/*Também se pode utilizar arras parar criar operações aritméticas*/
let calculo = [10, 15]
let resultado = calculo[0] + calculo[1]
console.log(resultado)
